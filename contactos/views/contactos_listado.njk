{% extends "base.njk" %}
{% block titulo %}Contactos | Listado{% endblock %}
{% block contenido %}    
    <div class="container">
        <h1>Listado de contactos</h1>
        {% for contacto in contactos %}
            <div class="row m-1">
                <div class="p-1 col-6">{{ contacto.nombre }}</div>
                <div class="col-auto">
                    <a class="btn btn-success" href="/contactos/{{ contacto.id }}">Ver ficha</a>
                </div>
                <div class="col-auto">
                    <form action="/contactos/{{ contacto.id }}" method="post">
                        <input type="hidden" name="_method" value="delete"/>
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </div>
                <div class="col-auto">
                    <a class="btn btn-primary" href="/contactos/editar/{{ contacto.id }}">Editar</a>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">No hay contactos que mostrar.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}